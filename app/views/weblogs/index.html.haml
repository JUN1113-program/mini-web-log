.flex-contener
  .index-area
    = render @weblogs
  .pagenation
    .pagenation__page.wf-Lobster
      = paginate(@weblogs)
  .side-bar
    .side-bar__scroll
      = render "search"
      .ranking
        .ranking__comment
          .ranking__comment__word
            = fa_icon "star"
            コメント数ランキング
          = render partial: "ranking/rank", collection: @comment_rank
        .ranking__viewed
          .ranking__viewed__word
            = fa_icon "star"
            閲覧数ランキング
          = render partial: "ranking/rank", collection: @viewed_rank
        .ranking__random
          .ranking__random__word
            = fa_icon "star"
            ランダムランキング
          = render partial: "ranking/rank", collection: @random_rank
